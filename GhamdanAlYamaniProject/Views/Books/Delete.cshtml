@model Books

<form asp-action="Delete" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="B_Id" />
     <label  class="control-label">Welcome-> Are You Sure !!! <br>  To Delete This Data Book --><hr></label>
	 <div class="form-group">
                <label asp-for="B_Name" class="control-label">The Book Name:</label>
                <input asp-for="B_Name" class="form-control" readonly />
                <span asp-validation-for="B_Name" class="text-danger"></span>
       </div>
        <div class="form-group">
                <label asp-for="Cat_Id" class="control-label">Select Catagory:</label>
                <input hidden asp-for="Cat_Id" />
                <select disabled asp-for="Cat_Id" asp-items="@(new SelectList(ViewBag.catagory,"Cat_Id","Cat_Name"))" class="form-control"  ></select>
                <span asp-validation-for="Cat_Id" class="text-danger"></span>
       </div>
       <br>
       <input type="submit" class="btn btn-danger" value="Delete" />
</form>
